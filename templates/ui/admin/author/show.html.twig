{% extends 'base.html.twig' %}

{% block title %}Author{% endblock %}

{% block body %}
    <h1>Author</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ author.id }}</td>
            </tr>
            <tr>
                <th>FamilyName</th>
                <td>{{ author.familyName }}</td>
            </tr>
            <tr>
                <th>FirtsName</th>
                <td>{{ author.firtsName }}</td>
            </tr>
            <tr>
                <th>IsEnabled</th>
                <td>{{ author.isEnabled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Books</th>
                <td>
                    {% if author.books is not empty %}
                        {% for book in author.books %}
                            {{ book.title }}, 
                        {% endfor %}
                    {% else %}
                        No books found...
                    {% endif %}
                    
                </td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ author.createdAt ? author.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ author.updatedAt ? author.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>DeletedAt</th>
                <td>{{ author.deletedAt ? author.deletedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary" href="{{ path('ui_admin_author.index') }}">Back to list</a>

    <a class="btn btn-warning" href="{{ path('ui_admin_author.edit', {'id': author.id}) }}">Edit</a>

    {{ include('ui/admin/author/_delete_form.html.twig') }}
{% endblock %}
